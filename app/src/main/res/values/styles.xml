<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="MyTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/myColorPrimary</item>
        <item name="colorPrimaryDark">@color/myColorPrimaryDark</item>
        <item name="colorAccent">@color/myColorAccent</item>
    </style>

    <style name="MyTextStyle">
        <item name="android:textSize">25sp</item>
        <item name="android:textColor">@color/myColorAccent</item>
        <item name="android:typeface">monospace</item>
    </style>

    <style name="HeadTextStyle">
        <item name="android:textSize">35sp</item>
        <item name="android:textColor">@color/myColorAccent</item>
        <item name="android:typeface">monospace</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="AppTheme.PopupOverlay">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:textColorPrimary">@color/myColorPrimaryDark</item>
        <item name="android:textColorSecondary">@color/myColorPrimary</item>
    </style>

</resources>
